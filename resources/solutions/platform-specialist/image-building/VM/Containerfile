FROM registry.redhat.io/rhel10/rhel-bootc:10.0

RUN rm -rf /etc/rhsm-host

RUN subscription-manager register --username xxx --password xxxxxx
#RUN dnf -y update
RUN dnf -y install tmux && dnf clean all
RUN subscription-manager unregister && subscription-manager clean

RUN ln -s /run/secrets/rhsm /etc/rhsm-host
